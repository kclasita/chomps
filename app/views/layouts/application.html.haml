  %head
    %meta{charset: "utf-8"}
    %meta{name: "viewport", content: "width=device-width, initial-scale=1.0"}
    = content_for(:head)
    %title= content_for?(:title) ? yield(:title) : "Chomps"
    = stylesheet_link_tag "application"
